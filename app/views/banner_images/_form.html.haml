= form_for @banner_image do |f|
  - if @banner_image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@banner_image.errors.count, "error")} prohibited this banner_image from being saved:"
      %ul
        - @banner_image.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :page_id
    = f.number_field :page_id
  .actions
    = f.submit 'Save'
