= form_for @gallery_image do |f|
  - if @gallery_image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gallery_image.errors.count, "error")} prohibited this gallery_image from being saved:"
      %ul
        - @gallery_image.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
