= form_for @booking do |f|
  - if @booking.errors.any?
    #error_explanation
      %h2= "#{pluralize(@booking.errors.count, "error")} prohibited this booking from being saved:"
      %ul
        - @booking.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :telephone
    = f.text_field :telephone
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :number_of_people
    = f.number_field :number_of_people
  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :time
    = f.text_field :time
  .field
    = f.label :message
    = f.text_area :message
  .actions
    = f.submit 'Save'
