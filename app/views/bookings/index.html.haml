%h1 Listing bookings

%table
  %thead
    %tr
      %th Name
      %th Telephone
      %th Email
      %th Number of people
      %th Date
      %th Time
      %th Message
      %th
      %th
      %th

  %tbody
    - @bookings.each do |booking|
      %tr
        %td= booking.name
        %td= booking.telephone
        %td= booking.email
        %td= booking.number_of_people
        %td= booking.date
        %td= booking.time
        %td= booking.message
        %td= link_to 'Show', booking
        %td= link_to 'Edit', edit_booking_path(booking)
        %td= link_to 'Destroy', booking, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Booking', new_booking_path
