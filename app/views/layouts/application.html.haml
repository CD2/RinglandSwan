!!!
%html
  %head
    %title= page_title(yield(:title))
    %link{:href => "/fav.png", :rel => "shortcut icon", :type => "image/png"}/
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'

    %meta{:content => "width=device-width, maximum-scale=1.0, minimum-scale=1.0, initial-scale=1", :name => "viewport"}/
    - if content_for?(:meta)
      %meta{:name => "description", :content => yield(:meta)}
  %body{class: "#{controller_name}_#{action_name}"}
    - if signed_in?
      = render 'admin_bar'
    #page_wrapper
      = render 'header'
      - if content_for? :full_width
        #highlight
          = yield :full_width
      #page
        .turbolinks-progress-bar
        = yield
      = render 'footer'

    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
