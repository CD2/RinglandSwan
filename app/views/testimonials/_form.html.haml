= form_for @testimonial do |f|
  - if @testimonial.errors.any?
    #error_explanation
      %h2= "#{pluralize(@testimonial.errors.count, "error")} prohibited this testimonial from being saved:"
      %ul
        - @testimonial.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :author
    = f.text_field :author
  .actions
    = f.submit 'Save'
