- provide :title, @page.page_title
- provide :meta, @page.meta_description
- content_for :full_width do
  #banner_wrapper
    = page_banner @page

.page_columns
  .main_column
    %h1 Contact Us



  .side_column
    %p
      Swan Inn
      %bra
      The Street
      %br
      Ringland
      %br
      Norwich
      %br
      NR8 6AB

      %p
        01603 869014

      %p
        info@ringlandswan.co.uk
    = form_for @enquiry do |f|
      - if @enquiry.errors.any?
        #error_explanation
          %h2= "#{pluralize(@enquiry.errors.count, "error")} prohibited this enquiry from being saved:"
          %ul
            - @enquiry.errors.full_messages.each do |msg|
              %li= msg
      .field
        = f.text_field :name, placeholder: 'Name'
      .field
        = f.text_field :email, placeholder: 'Email'
      .field
        = f.text_area :message, placeholder: 'Message'
      .actions
        = f.submit 'Save'
